            "properties": {
                "description": {
                    "type": "string",
                    "example": "Finish the quarterly project proposal document"
                },
                "due_date": {
                    "type": "string",
                    "example": "2024-12-31T23:59:59Z"
                },
                "goal_id": {
                    "type": "integer",
                    "example": 1
                },
                "order": {
                    "type": "integer",
